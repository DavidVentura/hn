<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ThreadHeader" parent="AdwHeaderBar">
    <child>
      <object class="GtkButton" id="back_event">
        <property name="visible">0</property>
        <signal name="clicked" handler="back_click" swapped="no"/>
        <property name="can_focus">0</property>
        <property name="hexpand">0</property>
        <property name="halign">start</property>
        <child>
          <object class="GtkImage" id="back_icon">
            <property name="visible">0</property>
            <property name="can_focus">0</property>
            <property name="halign">start</property>
            <property name="resource">/hn/icons/back.svg</property>
            <style>
              <class name="thread-back"/>
            </style>
          </object>
        </child>
        <style>
          <class name="flat"/>
          <class name="round"/>
        </style>
      </object>
    </child>
    <child type="title">
      <object class="GtkLabel" id="title">
        <property name="visible">0</property>
        <property name="can_focus">0</property>
        <property name="halign">center</property>
        <property name="hexpand">1</property>
        <property name="label" translatable="yes">...</property>
        <property name="wrap">1</property>
        <property name="ellipsize">end</property>
        <style>
          <class name="thread-title"/>
        </style>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="article_event">
        <property name="visible">0</property>
        <signal name="clicked" handler="article_click" swapped="no"/>
        <property name="can_focus">0</property>
        <property name="halign">end</property>
        <child>
          <object class="GtkImage">
            <property name="visible">0</property>
            <property name="can_focus">0</property>
            <property name="halign">end</property>
            <property name="resource">/hn/icons/open-article.svg</property>
            <style>
              <class name="thread-article"/>
            </style>
          </object>
        </child>
        <style>
          <class name="flat"/>
          <class name="round"/>
        </style>
      </object>
    </child>
    <style>
      <class name="thread-header"/>
    </style>
  </template>
</interface>

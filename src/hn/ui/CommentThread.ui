<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="CommentThread">
    <child>
      <object class="GtkOverlay">
        
        <property name="child">
          <object class="GtkScrolledWindow">
            
            <property name="hscrollbar_policy">never</property>
            <property name="child">
              <object class="GtkViewport">
                
                <property name="can_focus">0</property>
                <property name="child">
                  <object class="GtkBox" id="header_comments_vbox">
                    
                    <property name="can_focus">0</property>
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkBox" id="comments_container">
                        
                        <property name="can_focus">0</property>
                        <property name="vexpand">1</property>
                        <property name="valign">start</property>
                        <property name="orientation">vertical</property>
                        <child>
                          <placeholder/>
                        </child>
                        <style>
                          <class name="thread-comments"/>
                        </style>
                      </object>
                    </child>
                    <style>
                      <class name="thread-complete"/>
                    </style>
                  </object>
                </property>
              </object>
            </property>
          </object>
        </property>
        <child type="overlay">
          <object class="GtkButton" id="thread_reply">
            
            <property name="valign">end</property>
            <property name="halign">end</property>
            <child>
              <object class="GtkImage">
                
                <property name="can_focus">0</property>
                <property name="resource">/hn/icons/reply.svg</property>
                <style>
                  <class name="round"/>
                </style>
              </object>
            </child>
            <style>
              <class name="thread-reply-action"/>
              <class name="round"/>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
